<Window x:Class="PL.Customer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Customer" Height="450" Width="800">
    <Grid>
        <Grid x:Name="AddCustomer" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Content="Id" Grid.Row="1" Grid.Column="1"/>
            <Label Content="Name" Grid.Row="2" Grid.Column="1"/>
            <Label Content="Phone" Grid.Row="3" Grid.Column="1"/>
            <Label Content="Longitude" Grid.Row="4" Grid.Column="1"/>
            <Label Content="Latitude" Grid.Row="5" Grid.Column="1"/>
            <TextBox x:Name="IdA" MaxLength="9" Grid.Column="2" HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="1"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
            <TextBox x:Name="NameA"  Grid.Column="2" HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
            <TextBox x:Name="PhoneA" MaxLength="10" Grid.Column="2" HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
            <TextBox x:Name="LongitudeA" PreviewTextInput="LongitudeA_PreviewTextInput" Grid.Column="2" HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="4" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
            <TextBox x:Name="LatitudeA" PreviewTextInput="LatitudeA_PreviewTextInput" Grid.Column="2" HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="5" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
            <Button x:Name="Save" Content="Save" Grid.Column="3" HorizontalAlignment="Left" Margin="74,10,0,0" Grid.Row="5" VerticalAlignment="Top" Click="Button_ClickSave"/>
            <!--<Button x:Name="Close" Content="Close" Grid.Column="3" HorizontalAlignment="Left" Margin="74,10,0,0" Grid.Row="4" VerticalAlignment="Top" Click="Button_ClickClose"/>-->
        </Grid>
        <Grid x:Name="UpDateCustomer" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Content="Id" Grid.Row="1" Grid.Column="1" />
            <Label Content="Name" Grid.Row="2" Grid.Column="1"/>
            <Label Content="Phone" Grid.Row="3" Grid.Column="1"  />
            <Label Content="Parcel Send And provided" Grid.Row="4" Grid.Column="1"/>
            <Label Content="Parcel Send And Not provided" Grid.Row="5" Grid.Column="1"/>
            <Label Content="Number Get List Parcel" Grid.Row="6" Grid.Column="1" />
            <Label Content="Number Parcel To Customer" Grid.Row="7" Grid.Column="1"/>
            <TextBox x:Name="IdU" MaxLength="9" Grid.Column="2" Text="{Binding Path=Identity}" HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="1"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>
            <TextBox x:Name="NameU" Text="{Binding Path=Name}"  Grid.Column="2" HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
            <TextBox x:Name="PhoneU" Text="{Binding Path=Phone}" Grid.Column="2" HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
            <TextBox x:Name="ParcelSendAndprovidedU" Text="{Binding Path=ParcelSendAndprovided}" Grid.Column="2" HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="4" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>
            <TextBox x:Name="ParcelSendAndNotprovidedU" Text="{Binding Path=ParcelSendAndNotprovided}" Grid.Column="2" HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="5" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>
            <TextBox x:Name="NumberGetListParcelU" Text="{Binding Path=NumberGetListParcel}" Grid.Column="2" HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="6" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>
            <TextBox x:Name="NumberParcelTOCustomerU" Text="{Binding Path=NumberParcelTOCustomer}" Grid.Column="2" HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="7" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>

            <Button Content="Save" Grid.Column="3" HorizontalAlignment="Left" Margin="62,18,0,0" Grid.Row="10" VerticalAlignment="Top" Click="Button_ClickSaveUpdate"/>
            <Button Content="Parcel Get" Grid.Column="2" HorizontalAlignment="Left" Margin="84,19,0,0" Grid.Row="10" VerticalAlignment="Top" Click="Button_Click"/>
            <Button Content="Parcel Set" Grid.Column="1" HorizontalAlignment="Left" Margin="108,18,0,0" Grid.Row="98" VerticalAlignment="Top" RenderTransformOrigin="0.434,-0.904" Click="Button_Click__ParcelSet"/>
            <DataGrid x:Name="ParcelsSet" Grid.Row="8"  Margin="0,2,0,0" Grid.ColumnSpan="4" IsReadOnly="true" Visibility="Collapsed"/>
            <DataGrid x:Name="ParcelsGet" Grid.Row="9"  Margin="0,2,0,0" Grid.ColumnSpan="4" IsReadOnly="true" Visibility="Collapsed"/>
            <Button Content="Close" Grid.Column="3" HorizontalAlignment="Left" Margin="140,18,0,0" Grid.Row="10" VerticalAlignment="Top" Click="Button_Click_Close"/>
        </Grid>
        <Grid Name="GetCustomer" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Content="Id"   Grid.Row="1" Grid.Column="1" />
            <Label Content="Name" Grid.Row="2" Grid.Column="1"/>
            <TextBox x:Name="IdST" Text="{Binding Path=Identity}" IsReadOnly="True" MaxLength="9" Grid.Column="2"  HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="1"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="NameUST" Text="{Binding Path=Name}" IsReadOnly="True" Grid.Column="2" HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
            <Button Content="close" HorizontalAlignment="Left" Margin="119,9,0,0" Grid.Row="5" VerticalAlignment="Top" RenderTransformOrigin="-0.176,-0.834" Click="Button_Click_Close1"/>

        </Grid>
    </Grid>
</Window>
