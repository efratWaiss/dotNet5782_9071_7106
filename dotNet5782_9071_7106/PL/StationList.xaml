<Window x:Class="PL.StationList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="StationList" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*" />
            
        </Grid.ColumnDefinitions >

        <DataGrid x:Name="All_Stations" Grid.ColumnSpan="5" Margin="0,217,0,0" Grid.RowSpan="2" />
        <ItemsControl x:Name="GroupingStations" Visibility="Collapsed" Margin="0,2,0,0" Grid.Row="1" Width="700">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Expander Header="{Binding Key}">
                        <DataGrid ItemsSource="{Binding}"/>
                    </Expander>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Button Content="select Stations" Click="GroupStationsByAvailable" Grid.Row="0" Margin="0,41,15,108" Grid.Column="1" />
        <Button Content="View All Stations" Click="ViewAllStations" Grid.Column="2" Margin="22,41,0,108"/>
        <Button Content="Add Station" Click="Add_Station" Margin="10,41,10,108" RenderTransformOrigin="0.5,2.934"/>
        <DataGrid x:Name="StationListViewBy"  Grid.Row="1" Visibility="Collapsed" MouseDoubleClick="StationListView_MouseDoubleClick" Margin="0,2,0,0"  />

    </Grid>
</Window>
