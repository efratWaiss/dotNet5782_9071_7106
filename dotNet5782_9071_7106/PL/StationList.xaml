<Window x:Class="PL.StationList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="StationList" Height="640" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions >
            <!--<ColumnDefinition Width="300"/>-->
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*" />

        </Grid.ColumnDefinitions >

        <DataGrid x:Name="All_Stations" MouseDoubleClick="StationListView_MouseDoubleClick" Grid.ColumnSpan="4" Width="700" Margin="0,217,0,0" Grid.RowSpan="2" />
        <ItemsControl x:Name="GroupingStations" Visibility="Collapsed" Margin="0,2,0,0" Grid.Row="1" Width="700" Grid.ColumnSpan="4">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Expander Header="{Binding Key}">
                        <DataGrid ItemsSource="{Binding}"/>
                    </Expander>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <DataGrid x:Name="StationListViewBy" Visibility="Collapsed" IsReadOnly="True"  />
        <WrapPanel Grid.RowSpan="1" Grid.Row="0" Grid.ColumnSpan="4" Grid.Column="0">
            <Button Content="select Stations" Click="GroupStationsByAvailable" />
            <Button Content="View All Stations" Click="ViewAllStations"/>
            <Button Content="Add Station" Click="Add_Station"  /> 
            <Button Content="Close"  Click="Button_Click_Close" />
        </WrapPanel>
        
    </Grid>
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="BorderBrush" Value="LightBlue"/>
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="Segoe UI Variable Text Semibold" />
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontStretch" Value="ExtraCondensed"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="Background" Value="#FF01356E"/>
            <Setter Property="Height" Value=" 40" />
            <Setter Property="Width" Value="160"/>
            <!--<Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>-->
            <Setter Property="Margin" Value="0,0,0,0"/>
        </Style>
    </Window.Resources>

</Window>
